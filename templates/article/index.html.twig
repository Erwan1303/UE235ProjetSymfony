{% extends 'base.html.twig' %}

{% block title %}Article index
{% endblock %}

{% block body %}
	<div>
		<h1>
			Cette semaine on s'est posé la question : Mais où est Kenny ?
		</h1>
		<img src=" {{ asset('img/kenny.png') }}" class="img-fluide" alt="Kenny"/>
	</div>

	<h1>Article index</h1>

	<a href="{{ path('article_new') }}" class="btn btn-success ">Créer un nouvel article</a>

	<table class="table">
		<thead>
			<tr class="table-info">
				<th>Id</th>
				<th>Title</th>
				<th>Category</th>
				<th>Content</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
				<tr class="table-light">
					<td>{{ article.id }}</td>
					<td>{{ article.title }}</td>
					<td>
						{% if article.Category.name is defined %}
							{{ article.Category.name }}
						{% endif %}
					</td>
					<td>{{ article.content }}</td>
					<td>
						<a href="{{ path('article_show', {'id': article.id}) }}" class="btn btn-secondary ">show</a>
						<a href="{{ path('article_edit', {'id': article.id}) }}" class="btn btn-secondary ">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>


{% endblock %}
